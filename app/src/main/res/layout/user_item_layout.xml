<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttons_background"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"
            android:padding="9dp"/>

        <TextView
            android:id="@+id/username_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User name"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:layout_below="@+id/user_profile_image_search"
            android:gravity="center"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/fullname_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Full name"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/username_search"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />

        <Button
            android:id="@+id/follow_search"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullname_search"
            android:layout_centerHorizontal="true"
            android:text="Follow"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBlue"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>